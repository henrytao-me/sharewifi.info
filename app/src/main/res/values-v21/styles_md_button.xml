<resources>

  <style name="MdButton">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">48dp</item>
    <item name="android:minWidth">72dp</item>
    <item name="android:paddingLeft">12dp</item>
    <item name="android:paddingRight">12dp</item>
    <item name="android:singleLine">true</item>
    <item name="android:ellipsize">end</item>
    <item name="android:gravity">center</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:background">@drawable/md_button_background</item>
    <item name="android:textColor">@color/md_primary_text</item>
    <item name="android:stateListAnimator">@anim/md_button_state_list_animator</item>
  </style>

</resources>