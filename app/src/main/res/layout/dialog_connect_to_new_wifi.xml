<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:paddingBottom="?attr/mdLayout_spacing"
  android:paddingLeft="?attr/mdLayout_spacing"
  android:paddingRight="?attr/mdLayout_spacing"
  android:paddingTop="?attr/mdLayout_spacing">

  <TextView
    android:paddingLeft="?attr/mdLayout_spacing_sm"
    android:paddingRight="?attr/mdLayout_spacing_sm"
    android:text="@string/text_password"
    android:textColor="?attr/mdHintTextColor_backgroundPalette"
    style="@style/MdText.Body1.SingleLine" />

  <EditText
    android:id="@+id/password"
    android:layout_marginLeft="?attr/mdLayout_spacing_xs"
    android:layout_marginRight="?attr/mdLayout_spacing_xs"
    android:inputType="textPassword"
    style="@style/MdEditText.SingleLine" />

  <CheckBox
    android:id="@+id/show_password"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="?attr/mdLayout_spacing"
    android:text="@string/text_show_password" />

</LinearLayout>