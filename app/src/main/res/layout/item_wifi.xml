<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:background="@drawable/md_ripple"
  android:clickable="true"
  style="@style/MdList.ThreeLine.AvatarIconWithText">

  <ImageView
    android:src="@drawable/ic_info_white_inactive"
    style="@style/MdList.ThreeLine.AvatarIconWithText.Avatar" />

  <TextView
    android:id="@+id/name"
    tools:text="CodeLearn Chapter 1"
    style="@style/MdList.ThreeLine.AvatarIconWithText.Text.First" />

  <TextView
    android:id="@+id/status"
    tools:text="No shared password"
    style="@style/MdList.ThreeLine.AvatarIconWithText.Text.Second" />

  <TextView
    android:id="@+id/desc"
    tools:text="Description"
    style="@style/MdList.ThreeLine.AvatarIconWithText.Text.Third" />

  <ImageView
    android:background="@drawable/md_ripple_oval"
    android:clickable="true"
    android:src="@drawable/ic_info_white_inactive"
    style="@style/MdList.ThreeLine.AvatarIconWithText.Icon" />

  <View
    android:layout_alignParentBottom="true"
    style="@style/MdDivider" />

</RelativeLayout>