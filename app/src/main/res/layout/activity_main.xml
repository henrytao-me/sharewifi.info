<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/container"
  style="@style/MdDrawerLayout">

  <RelativeLayout
    android:id="@+id/content"
    style="@style/MdDrawerLayout.Content">

    <fragment
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:name="me.henrytao.sharewifi.fragment.MainFragment"
      android:layout="@layout/fragment_main"
      tools:layout="@layout/fragment_main" />

  </RelativeLayout>

  <RelativeLayout
    android:id="@+id/navigation_drawer"
    style="@style/MdDrawerLayout.Drawer">

    <fragment
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:name="me.henrytao.sharewifi.fragment.NavigationDrawerFragment"
      android:layout="@layout/fragment_navigation_drawer"
      tools:layout="@layout/fragment_navigation_drawer" />

  </RelativeLayout>

</android.support.v4.widget.DrawerLayout>


