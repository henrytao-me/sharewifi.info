<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="me.henrytao.sharewifi.fragment.WifiDetailFragment">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="?attr/mdLayout_spacing_sm">

    <RelativeLayout
      android:layout_height="72dp"
      style="@style/MdList.SingleLine.AvatarWithText">
      <ImageView
        android:id="@+id/status_icon"
        android:src="@drawable/ic_signal_wifi_3_bar_lock"
        style="@style/MdList.SingleLine.AvatarWithText.Avatar" />
      <TextView
        android:id="@+id/status"
        android:layout_toLeftOf="@+id/status_button_container"
        android:textColor="?attr/mdColor_primaryPalette"
        tools:text="Connected"
        style="@style/MdList.SingleLine.AvatarWithText.Text" />
      <RelativeLayout
        android:id="@+id/status_button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="?attr/mdLayout_spacing">
        <Button
          android:id="@+id/button_connect"
          android:text="@string/text_connect"
          style="@style/MdButton.Primary" />
        <Button
          android:id="@+id/button_disconnect"
          android:text="@string/text_disconnect"
          android:visibility="gone"
          style="@style/MdButton.BackgroundDark" />
      </RelativeLayout>
    </RelativeLayout>

    <View style="@style/MdDivider" />

    <RelativeLayout
      android:layout_height="wrap_content"
      android:minHeight="56dp"
      style="@style/MdList.SingleLine.AvatarIconWithText">
      <ImageView
        android:src="@drawable/ic_location_on"
        style="@style/MdList.SingleLine.AvatarIconWithText.Avatar" />
      <ImageView
        android:id="@+id/button_edit_name"
        android:background="@drawable/md_ripple_oval"
        android:clickable="true"
        android:src="@drawable/ic_edit_inactive"
        style="@style/MdList.SingleLine.AvatarIconWithText.Icon" />
      <TextView
        android:id="@+id/name"
        android:minHeight="56dp"
        android:paddingBottom="?attr/mdLayout_spacing"
        android:paddingTop="?attr/mdLayout_spacing"
        android:singleLine="false"
        android:text="Location name"
        style="@style/MdList.SingleLine.AvatarIconWithText.Text" />
    </RelativeLayout>

    <View
      android:layout_marginLeft="?attr/mdLayout_contentAssociatedWithIconOrAvatarLeftMargin"
      style="@style/MdDivider" />

    <RelativeLayout
      android:layout_height="wrap_content"
      android:minHeight="56dp"
      style="@style/MdList.SingleLine.AvatarIconWithText">
      <ImageView
        android:id="@+id/button_edit_address"
        android:background="@drawable/md_ripple_oval"
        android:clickable="true"
        android:src="@drawable/ic_edit_inactive"
        style="@style/MdList.SingleLine.AvatarIconWithText.Icon" />
      <TextView
        android:id="@+id/address"
        android:minHeight="56dp"
        android:paddingBottom="?attr/mdLayout_spacing"
        android:paddingTop="?attr/mdLayout_spacing"
        android:singleLine="false"
        android:text="Location address location address location address"
        style="@style/MdList.SingleLine.AvatarIconWithText.Text" />
    </RelativeLayout>

    <View style="@style/MdDivider" />

    <RelativeLayout
      android:layout_height="wrap_content"
      android:minHeight="72dp"
      android:paddingBottom="?attr/mdLayout_spacing"
      style="@style/MdList.ThreeLine.AvatarIconWithText">
      <ImageView
        android:src="@drawable/ic_lock"
        style="@style/MdList.ThreeLine.AvatarIconWithText.Avatar" />
      <ImageView
        android:id="@+id/button_edit_password"
        android:background="@drawable/md_ripple_oval"
        android:clickable="true"
        android:src="@drawable/ic_edit_inactive"
        style="@style/MdList.ThreeLine.AvatarIconWithText.Icon" />
      <TextView
        android:id="@+id/password"
        android:layout_height="wrap_content"
        android:paddingTop="?attr/mdLayout_spacing"
        android:text="123456789"
        style="@style/MdList.ThreeLine.AvatarIconWithText.Text.First" />
      <TextView
        android:id="@+id/password_status"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginTop="?attr/mdLayout_spacing_xs"
        android:text="last connect successful"
        android:textColor="?attr/mdSecondaryTextColor_backgroundPalette"
        style="@style/MdList.ThreeLine.AvatarIconWithText.Text.Second" />
      <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_status"
        android:layout_marginLeft="?attr/mdLayout_contentAssociatedWithIconOrAvatarLeftMargin"
        android:layout_marginTop="?attr/mdLayout_spacing_xs">
        <Button
          android:id="@+id/button_report_password"
          android:layout_marginLeft="-4dp"
          android:text="@string/text_report_password"
          style="@style/MdButton.BackgroundDark" />
      </RelativeLayout>
    </RelativeLayout>

    <View style="@style/MdDivider" />

  </LinearLayout>

</ScrollView>
