<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="me.henrytao.sharewifi.fragment.WifiDetailFragment">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="?attr/mdLayout_spacing_sm">

    <RelativeLayout
      android:layout_height="wrap_content"
      android:minHeight="56dp"
      style="@style/MdList.SingleLine.AvatarIconWithText">
      <ImageView
        android:src="@drawable/ic_location_on"
        style="@style/MdList.SingleLine.AvatarIconWithText.Avatar" />
      <ImageView
        android:id="@+id/info_name"
        android:background="@drawable/md_ripple_oval"
        android:clickable="true"
        android:src="@drawable/ic_edit_inactive"
        style="@style/MdList.SingleLine.AvatarIconWithText.Icon" />
      <TextView
        android:layout_toLeftOf="@+id/info_name"
        android:minHeight="56dp"
        android:paddingBottom="?attr/mdLayout_spacing"
        android:paddingTop="?attr/mdLayout_spacing"
        android:singleLine="false"
        android:text="Location name"
        style="@style/MdList.SingleLine.AvatarIconWithText.Text" />
    </RelativeLayout>

    <View
      android:layout_marginLeft="?attr/mdLayout_contentAssociatedWithIconOrAvatarLeftMargin"
      style="@style/MdDivider" />

    <RelativeLayout
      android:layout_height="wrap_content"
      android:minHeight="56dp"
      style="@style/MdList.SingleLine.AvatarIconWithText">
      <ImageView
        android:id="@+id/info_address"
        android:background="@drawable/md_ripple_oval"
        android:clickable="true"
        android:src="@drawable/ic_edit_inactive"
        style="@style/MdList.SingleLine.AvatarIconWithText.Icon" />
      <TextView
        android:layout_toLeftOf="@+id/info_address"
        android:minHeight="56dp"
        android:paddingBottom="?attr/mdLayout_spacing"
        android:paddingTop="?attr/mdLayout_spacing"
        android:singleLine="false"
        android:text="Location address location address location address"
        style="@style/MdList.SingleLine.AvatarIconWithText.Text" />
    </RelativeLayout>

    <View style="@style/MdDivider" />

    <RelativeLayout style="@style/MdList.ThreeLine.AvatarIconWithText">
      <ImageView
        android:src="@drawable/ic_lock"
        style="@style/MdList.ThreeLine.AvatarIconWithText.Avatar" />
      <ImageView
        android:id="@+id/info_password"
        android:background="@drawable/md_ripple_oval"
        android:clickable="true"
        android:src="@drawable/ic_edit_inactive"
        style="@style/MdList.ThreeLine.AvatarIconWithText.Icon" />
      <TextView
        android:layout_toLeftOf="@+id/info_password"
        android:text="123456789"
        style="@style/MdList.ThreeLine.AvatarIconWithText.Text.First" />
      <TextView
        android:layout_toLeftOf="@+id/info_password"
        android:text="last connect successful / password expired"
        style="@style/MdList.ThreeLine.AvatarIconWithText.Text.Second.MultipleLine" />
    </RelativeLayout>

    <View style="@style/MdDivider" />

  </LinearLayout>

</ScrollView>
