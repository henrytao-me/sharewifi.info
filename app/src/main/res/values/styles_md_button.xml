  <!-- dependency: https://github.com/futuresimple/android-floating-action-button -->
  <style name="MdButton.FAB.LabelStyle" parent="">
    <item name="android:background">@drawable/md_button_fab_label_style_background</item>
    <item name="android:textColor">@color/md_primary_text_reverse</item>
  </style>

  <style name="MdButton.FAB" parent="">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <!-- AddFloatingActionButton -->
    <item name="fab_colorNormal">@color/md_background</item>
    <item name="fab_colorPressed">@color/md_background_pressed</item>
    <item name="fab_plusIconColor">@color/md_primary_text</item>
    <!-- FloatingActionsMenu -->
    <item name="fab_labelStyle">@style/MdButton.FAB.LabelStyle</item>
    <item name="fab_addButtonColorNormal">@color/md_background</item>
    <item name="fab_addButtonColorPressed">@color/md_background_pressed</item>
    <item name="fab_addButtonPlusIconColor">@color/md_primary_text</item>
  </style>

  <style name="MdButton.FAB.Mini">
    <!-- FloatingActionButton -->
    <item name="fab_size">mini</item>
    <!-- FloatingActionsMenu -->
    <item name="fab_addButtonSize">mini</item>
  </style>

  <style name="MdButton.FAB.Primary">
    <!-- AddFloatingActionButton -->
    <item name="fab_colorNormal">@color/md_primary</item>
    <item name="fab_colorPressed">@color/md_primary_pressed</item>
    <item name="fab_plusIconColor">@color/md_primary_text_reverse</item>
    <!-- FloatingActionsMenu -->
    <item name="fab_labelStyle">@style/MdButton.FAB.LabelStyle</item>
    <item name="fab_addButtonColorNormal">@color/md_primary</item>
    <item name="fab_addButtonColorPressed">@color/md_primary_pressed</item>
    <item name="fab_addButtonPlusIconColor">@color/md_primary_text_reverse</item>
  </style>

  <style name="MdButton.FAB.Primary.Mini">
    <!-- FloatingActionButton -->
    <item name="fab_size">mini</item>
    <!-- FloatingActionsMenu -->
    <item name="fab_addButtonSize">mini</item>
  </style>

