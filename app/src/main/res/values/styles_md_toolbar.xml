<resources>

  <style name="MdToolbar">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">?attr/actionBarSize</item>
    <item name="android:background">@color/md_primary</item>
    <item name="theme">@style/MdToolbar.Theme</item>
    <item name="popupTheme">@style/MdToolbar.PopupTheme</item>
  </style>

  <style name="MdToolbar.Theme" parent="Theme.AppCompat.NoActionBar">
    <item name="android:textColorPrimary">@color/md_primary_text_inverse</item>
    <item name="android:textColorPrimaryInverse">@color/md_primary_text</item>
    <!--android:textColorSecondary is the color of subtitle & the menu overflow icon (three vertical dots) -->
    <item name="android:textColorSecondary">@color/md_secondary_text_inverse</item>
    <item name="android:textColorSecondaryInverse">@color/md_secondary_text</item>
  </style>

  <style name="MdToolbar.PopupTheme" parent="MdToolbar.Theme">
    <item name="android:background">@color/md_background</item>
    <item name="android:textColorPrimary">@color/md_primary_text</item>
    <item name="android:textColorPrimaryInverse">@color/md_primary_text_inverse</item>
    <item name="android:textColorSecondary">@color/md_secondary_text</item>
    <item name="android:textColorSecondaryInverse">@color/md_secondary_text_inverse</item>
  </style>

</resources>